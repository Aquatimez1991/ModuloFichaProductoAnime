---
import '../styles/global.css';
import { allFigures } from '../data/products';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'RabbitVault - Figuras Anime de Calidad',
  description = 'Tienda especializada en figuras anime auténticas importadas directamente desde Japón'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body data-figures={JSON.stringify(allFigures)}>
    <slot />
    <script>
      window.buyNowGlobal = function(figureId: number) {
        const allFiguresData = JSON.parse(document.body.getAttribute('data-figures') || '[]');
        const figure = allFiguresData.find((f: any) => f.id === figureId);
        if (figure) {
          const message = `¡Hola! Me interesa comprar:\n\n` +
            `*${figure.name}*\n` +
            `Precio: S/${figure.price.toLocaleString('en-US')}\n` +
            `Fabricante: ${figure.manufacturer}\n` +
            `Escala: ${figure.scale}\n` +
            `Altura: ${figure.height}\n` +
            `Material: ${figure.material}\n\n` +
            `¿Podrías darme más información sobre disponibilidad y envío?`;
          const whatsappUrl = `https://wa.me/51949799869?text=${encodeURIComponent(message)}`;
          window.open(whatsappUrl, '_blank');
        }
      };
      
      window.buyNowWithQuantity = function(figureId: number, quantity: number) {
        const allFiguresData = JSON.parse(document.body.getAttribute('data-figures') || '[]');
        const figure = allFiguresData.find((f: any) => f.id === figureId);
        if (figure) {
          const totalPrice = figure.price * quantity;
          const message = `¡Hola! Me interesa comprar:\n\n` +
            `*${figure.name}*\n` +
            `Precio unitario: S/${figure.price.toLocaleString('en-US')}\n` +
            `Cantidad: ${quantity}\n` +
            `Precio total: S/${totalPrice.toLocaleString('en-US')}\n` +
            `Fabricante: ${figure.manufacturer}\n` +
            `Escala: ${figure.scale}\n` +
            `Altura: ${figure.height}\n` +
            `Material: ${figure.material}\n\n` +
            `¿Podrías darme más información sobre disponibilidad y envío?`;
          const whatsappUrl = `https://wa.me/51949799869?text=${encodeURIComponent(message)}`;
          window.open(whatsappUrl, '_blank');
        }
      };
    </script>
  </body>
</html>
