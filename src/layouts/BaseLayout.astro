---
import type { SEOProps } from '../types/common';

interface Props extends SEOProps {
  showHeader?: boolean;
  showFooter?: boolean;
  containerClass?: string;
}

const {
  title = 'FigureStore - Figuras Anime de Calidad',
  description = 'Descubre nuestra colección de figuras anime de alta calidad. Figuras a escala, Nendoroid, Figma y más.',
  image = '/og-image.jpg',
  showHeader = true,
  showFooter = true,
  containerClass = ''
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- SEO -->
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin />
    
    <!-- Styles -->
    <link rel="stylesheet" href="/styles/globals.css" />
  </head>
  
  <body class="min-h-screen bg-gray-50">
    {showHeader && <slot name="header" />}
    
    <main class={`min-h-screen ${containerClass}`}>
      <slot />
    </main>
    
    {showFooter && <slot name="footer" />}
    
    <!-- Scripts -->
    <script src="/scripts/analytics.js" defer></script>
  </body>
</html>
