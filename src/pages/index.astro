---
import Layout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import ProductCarousel from '../components/ProductCarousel.astro';
import Categories from '../components/Categories.astro';
import CartModal from '../components/CartModal.astro';
import WishlistModal from '../components/WishlistModal.astro';

---

<Layout title="RabbitVault - Figuras Anime de Calidad">
  <Header />
  
  <!-- Notificación Modal - Venta Contra Entrega -->
  <div id="delivery-notification" class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/50 backdrop-blur-sm opacity-0 pointer-events-none transition-all duration-500">
    <div class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-700 rounded-3xl p-8 max-w-2xl w-full mx-4 shadow-2xl border border-white/20 transform scale-95 transition-all duration-500">
      <!-- Botón de cerrar -->
      <button id="close-notification" class="absolute top-4 right-4 text-white/80 hover:text-white transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      
      <div class="text-center">
        <!-- Icono principal -->
        <div class="inline-flex items-center justify-center w-20 h-20 bg-white/20 rounded-full mb-6 backdrop-blur-sm">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        
        <!-- Título principal -->
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 leading-tight">
          ¡VENTA CONTRA ENTREGA!
        </h2>
        
        <!-- Subtítulo -->
        <p class="text-xl text-blue-100 mb-6">
          Paga solo cuando recibas tu figura
        </p>
        
        <!-- Información de entrega -->
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 mb-6 border border-white/20">
          <div class="flex flex-col md:flex-row items-center justify-center gap-4 md:gap-8">
            <!-- Entrega en estaciones -->
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div class="text-left">
                <p class="text-white font-semibold">Entrega en Estaciones</p>
                <p class="text-blue-100 text-sm">Tren y Metropolitano</p>
              </div>
            </div>
            
            <!-- Separador -->
            <div class="hidden md:block w-px h-10 bg-white/30"></div>
            
            <!-- Sin riesgo -->
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <div class="text-left">
                <p class="text-white font-semibold">100% Seguro</p>
                <p class="text-blue-100 text-sm">Revisa antes de pagar</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Botones de acción -->
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <button id="view-products" class="bg-white text-blue-600 px-6 py-3 rounded-xl font-bold hover:bg-blue-50 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
            Ver Figuras
          </button>
          <button id="close-notification-btn" class="border-2 border-white/30 text-white px-6 py-3 rounded-xl font-bold hover:bg-white/10 transition-all duration-300">
            Entendido
          </button>
        </div>
      </div>
    </div>
  </div>

  <ProductCarousel />
  <Categories />
  


  <!-- Características -->
  <section class="py-20 bg-gradient-to-br from-emerald-50/40 via-teal-50/20 to-cyan-50/40">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-foreground mb-4">
          ¿Por Qué Elegirnos?
        </h2>
        <p class="text-lg text-muted-foreground">
          Somos especialistas en figuras anime con años de experiencia
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-emerald-500/20 to-teal-500/10 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-soft">
            <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Envío Seguro</h3>
          <p class="text-muted-foreground">Paga contraentrega luego de revisar la figura</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-emerald-500/20 to-teal-500/10 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-soft">
            <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Figuras 100% Auténticas</h3>
          <p class="text-muted-foreground">Importación directa de fabricantes oficiales japoneses</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-emerald-500/20 to-teal-500/10 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-soft">
            <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Especialistas en Figuras</h3>
          <p class="text-muted-foreground">Atención personalizada para coleccionistas exigentes</p>
        </div>
      </div>
    </div>
  </section>
  
  <CartModal />
  <WishlistModal />
</Layout>

<script>
  // Modal functionality
  const notification = document.getElementById('delivery-notification');
  const closeBtn = document.getElementById('close-notification');
  const closeBtnAlt = document.getElementById('close-notification-btn');
  const viewProductsBtn = document.getElementById('view-products');

  function closeNotification() {
    if (!notification) return;
    
    notification.querySelector('div')?.classList.remove('scale-100');
    notification.querySelector('div')?.classList.add('scale-95');
    notification.classList.add('opacity-0', 'pointer-events-none');
  }

  function showBannerNotification() {
    if (!notification) return;
    
    notification.classList.remove('opacity-0', 'pointer-events-none');
    notification.querySelector('div')?.classList.remove('scale-95');
    notification.querySelector('div')?.classList.add('scale-100');
  }

  closeBtn?.addEventListener('click', closeNotification);
  closeBtnAlt?.addEventListener('click', closeNotification);
  
  viewProductsBtn?.addEventListener('click', function() {
    closeNotification();
    const productosSection = document.getElementById('productos');
    productosSection?.scrollIntoView({
      behavior: 'smooth',
      block: 'start'
    });
  });

  // Show modal after page loads
  setTimeout(showBannerNotification, 1000);

  // Close with Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && notification && !notification.classList.contains('opacity-0')) {
      closeNotification();
    }
  });

  // Close when clicking outside the modal content
  notification?.addEventListener('click', function(e) {
    if (e.target === notification) {
      closeNotification();
    }
  });

  // Add to cart functionality
  function addToCart(figureId: string | number) {
    const store = JSON.parse(localStorage.getItem('figure-store') || '{"cart": {}, "wishlist": []}');
    store.cart[figureId] = (store.cart[figureId] || 0) + 1;
    localStorage.setItem('figure-store', JSON.stringify(store));
    window.dispatchEvent(new CustomEvent('cartUpdated'));
    
    window.showCartNotification('¡Producto agregado al carrito!');
  }



  // Make functions globally available
  window.addToCart = addToCart;
</script>
