---
import type { Product } from '../../../types/product';

const { product } = Astro.props;

// Funci√≥n para obtener la clase CSS del badge basada en el status
function getBadgeClass(status: string) {
  switch (status) {
    case 'Disponible':
      return 'product-badge--available';
    case 'Preventa':
      return 'product-badge--preorder';
    case 'Agotado':
      return 'product-badge--soldout';
    default:
      return 'product-badge--available';
  }
}
---

<div class="product-badges">
  <span class={`product-badge ${getBadgeClass(product.status)}`}>
    {product.status}
  </span>
</div>

<style>
  .product-badges {
    @apply flex flex-wrap gap-2;
  }
  
  .product-badge {
    @apply px-2 py-1 text-xs font-medium rounded-full;
  }
  
  .product-badge--available {
    @apply bg-blue-500 text-white;
  }
  
  .product-badge--preorder {
    @apply bg-orange-500 text-white;
  }
  
  .product-badge--soldout {
    @apply bg-red-500 text-white;
  }
</style>
