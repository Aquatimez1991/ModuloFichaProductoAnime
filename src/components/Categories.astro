---
// Categories.astro
---

<section class="py-16 bg-background">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-foreground mb-4">
        Explora Nuestras Categorías
      </h2>
      <p class="text-lg text-muted-foreground">
        Encuentra las figuras que mejor se adapten a tu colección
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Figuras a Escala -->
      <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-blue-500 to-purple-600 p-8 text-white hover:shadow-xl transition-all duration-300">
        <div class="relative z-10">
          <h3 class="text-2xl font-bold mb-2">Figuras a Escala</h3>
          <p class="text-blue-100 mb-4">Figuras detalladas en escalas 1/7, 1/8 y más</p>
          <div class="flex items-center justify-between">
            <span class="text-sm opacity-90">156 productos</span>
            <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
        </div>
        <div class="absolute inset-0 bg-gradient-to-br from-blue-600/20 to-purple-600/20 group-hover:scale-110 transition-transform duration-300"></div>
      </div>

      <!-- Nendoroids -->
      <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-pink-500 to-red-500 p-8 text-white hover:shadow-xl transition-all duration-300">
        <div class="relative z-10">
          <h3 class="text-2xl font-bold mb-2">Nendoroids</h3>
          <p class="text-pink-100 mb-4">Figuras chibi intercambiables y personalizables</p>
          <div class="flex items-center justify-between">
            <span class="text-sm opacity-90">89 productos</span>
            <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
        </div>
        <div class="absolute inset-0 bg-gradient-to-br from-pink-600/20 to-red-600/20 group-hover:scale-110 transition-transform duration-300"></div>
      </div>

      <!-- Figmas -->
      <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-green-500 to-teal-500 p-8 text-white hover:shadow-xl transition-all duration-300">
        <div class="relative z-10">
          <h3 class="text-2xl font-bold mb-2">Figmas</h3>
          <p class="text-green-100 mb-4">Figuras articuladas con múltiples poses</p>
          <div class="flex items-center justify-between">
            <span class="text-sm opacity-90">67 productos</span>
            <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
        </div>
        <div class="absolute inset-0 bg-gradient-to-br from-green-600/20 to-teal-600/20 group-hover:scale-110 transition-transform duration-300"></div>
      </div>

      <!-- Prize Figures -->
      <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-yellow-500 to-orange-500 p-8 text-white hover:shadow-xl transition-all duration-300">
        <div class="relative z-10">
          <h3 class="text-2xl font-bold mb-2">Prize Figures</h3>
          <p class="text-yellow-100 mb-4">Figuras de alta calidad a precios accesibles</p>
          <div class="flex items-center justify-between">
            <span class="text-sm opacity-90">234 productos</span>
            <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
        </div>
        <div class="absolute inset-0 bg-gradient-to-br from-yellow-600/20 to-orange-600/20 group-hover:scale-110 transition-transform duration-300"></div>
      </div>

      <!-- Model Kits -->
      <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-indigo-500 to-blue-500 p-8 text-white hover:shadow-xl transition-all duration-300">
        <div class="relative z-10">
          <h3 class="text-2xl font-bold mb-2">Model Kits</h3>
          <p class="text-indigo-100 mb-4">Kits de montaje para entusiastas del modelismo</p>
          <div class="flex items-center justify-between">
            <span class="text-sm opacity-90">45 productos</span>
            <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
        </div>
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-600/20 to-blue-600/20 group-hover:scale-110 transition-transform duration-300"></div>
      </div>

      <!-- Accesorios -->
      <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-purple-500 to-pink-500 p-8 text-white hover:shadow-xl transition-all duration-300">
        <div class="relative z-10">
          <h3 class="text-2xl font-bold mb-2">Accesorios</h3>
          <p class="text-purple-100 mb-4">Bases, vitrinas y accesorios para tu colección</p>
          <div class="flex items-center justify-between">
            <span class="text-sm opacity-90">123 productos</span>
            <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
        </div>
        <div class="absolute inset-0 bg-gradient-to-br from-purple-600/20 to-pink-600/20 group-hover:scale-110 transition-transform duration-300"></div>
      </div>
    </div>

    <div class="text-center mt-12">
      <a href="/figuras" class="inline-flex items-center gap-2 bg-primary text-primary-foreground px-8 py-3 rounded-lg font-medium hover:bg-primary/90 transition-colors">
        Ver Todas las Categorías
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
