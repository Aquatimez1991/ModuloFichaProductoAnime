<header class="bg-white/80 backdrop-blur-sm shadow-soft border-b border-border/50 sticky top-0 z-50">
  <!-- Top bar -->
  <div class="bg-gradient-to-r from-emerald-500/90 to-teal-500/80 text-primary-foreground py-2">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex flex-col sm:flex-row items-center justify-between text-sm gap-2 sm:gap-0">
        <div class="flex flex-col sm:flex-row items-center gap-2 sm:gap-6">
          <!-- Espacio reservado para mantener el tama√±o -->
        </div>
        <div class="flex items-center gap-4">
          <!-- Espacio reservado para mantener el tama√±o -->
        </div>
      </div>
    </div>
  </div>

  <!-- Main header -->
  <div class="max-w-7xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity cursor-pointer">
        <div class="w-10 h-10 bg-gradient-to-br from-emerald-500 to-teal-500 rounded-xl flex items-center justify-center shadow-soft">
          <svg class="w-6 h-6 text-primary-foreground" fill="currentColor" viewBox="0 0 24 24">
            <!-- Conejo estilizado para RabbitVault -->
            <!-- Cabeza del conejo -->
            <ellipse cx="12" cy="12" rx="8" ry="6"/>
            <!-- Orejas largas -->
            <ellipse cx="10" cy="6" rx="2" ry="4" transform="rotate(-15 10 6)"/>
            <ellipse cx="14" cy="6" rx="2" ry="4" transform="rotate(15 14 6)"/>
            <!-- Ojos -->
            <circle cx="10" cy="10" r="1.5"/>
            <circle cx="14" cy="10" r="1.5"/>
            <!-- Nariz -->
            <circle cx="12" cy="13" r="0.8"/>
            <!-- Bigotes (peque√±os puntos) -->
            <circle cx="8" cy="12" r="0.3"/>
            <circle cx="16" cy="12" r="0.3"/>
          </svg>
        </div>
        <div>
          <h1 class="text-xl font-bold text-foreground">RabbitVault</h1>
          <p class="text-xs text-muted-foreground">Anime Figures</p>
        </div>
      </a>

      <!-- Search bar -->
      <div class="hidden md:flex flex-1 max-w-md mx-8">
        <form class="w-full">
          <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-muted-foreground w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <input 
              type="search" 
              id="header-search"
              placeholder="Buscar figuras anime..." 
              class="w-full pl-10 pr-4 py-2 border border-input rounded-xl focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary/30 bg-white/50 backdrop-blur-sm"
              aria-label="Buscar figuras anime"
            >
            <button type="submit" class="absolute right-2 top-1/2 transform -translate-y-1/2 text-muted-foreground hover:text-primary transition-colors" aria-label="Buscar">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </button>
          </div>
        </form>
      </div>

      <!-- Navigation -->
      <nav class="hidden lg:flex items-center gap-8">
        <a href="/" class="text-foreground hover:text-primary transition-colors font-medium">Inicio</a>
        <a href="/figuras" class="text-foreground hover:text-primary transition-colors font-medium">Todas las Figuras</a>
        <a href="/figuras" class="text-foreground hover:text-primary transition-colors font-medium">Categor√≠as</a>
        <a href="/figuras?status=Preventa" class="text-foreground hover:text-primary transition-colors font-medium">Ofertas</a>
      </nav>

      <!-- Action buttons -->
      <div class="flex items-center gap-4">
        <button id="cart-btn" class="relative p-2 hover:bg-muted rounded-xl transition-colors" onclick="openCart()" aria-label="Abrir carrito de compras">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"></path>
          </svg>
          <span id="cart-count" class="absolute -top-1 -right-1 h-5 w-5 bg-primary text-primary-foreground rounded-full text-xs flex items-center justify-center opacity-0 pointer-events-none">0</span>
        </button>
        
        <button class="p-2 hover:bg-muted rounded-xl transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </button>

        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2 hover:bg-muted rounded-xl transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="lg:hidden border-t bg-background/95 backdrop-blur-sm hidden">
    <div class="px-4 py-6">
      <!-- Mobile search -->
      <form class="mb-6">
        <div class="relative">
          <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-muted-foreground w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          <input 
            type="search" 
            id="mobile-search"
            placeholder="Buscar figuras anime..." 
            class="w-full pl-10 pr-4 py-3 border border-input rounded-xl focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary/30 bg-white/50"
            aria-label="Buscar figuras anime"
          >
        </div>
      </form>

      <!-- Mobile navigation -->
      <nav class="space-y-1">
        <a href="/" class="block py-3 px-2 text-foreground hover:text-primary hover:bg-muted/50 rounded-lg transition-colors font-medium">üè† Inicio</a>
        <a href="/figuras" class="block py-3 px-2 text-foreground hover:text-primary hover:bg-muted/50 rounded-lg transition-colors font-medium">üé≠ Todas las Figuras</a>
        <a href="/figuras" class="block py-3 px-2 text-foreground hover:text-primary hover:bg-muted/50 rounded-lg transition-colors font-medium">üè∑Ô∏è Categor√≠as</a>
        <a href="/figuras?status=Preventa" class="block py-3 px-2 text-foreground hover:text-primary hover:bg-muted/50 rounded-lg transition-colors font-medium">üî• Ofertas</a>
      </nav>
      
      <!-- Mobile contact info -->
      <div class="mt-6 pt-6 border-t border-border/50">
        <div class="space-y-3 text-sm text-muted-foreground">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span>+51 949 799 869</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>ventas@rabbitvault.com</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    // Animate menu button
    mobileMenuBtn.classList.toggle('rotate-90');
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as Node;
    if (!mobileMenu?.contains(target) && !mobileMenuBtn?.contains(target)) {
      mobileMenu?.classList.add('hidden');
      mobileMenuBtn?.classList.remove('rotate-90');
    }
  });

  // Search functionality
  function handleSearch(e: Event) {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const searchInput = form.querySelector('input[type="search"]') as HTMLInputElement;
    const searchTerm = searchInput.value.trim();
    
    if (searchTerm) {
      window.location.href = `/figuras?search=${encodeURIComponent(searchTerm)}`;
    }
  }

  // Add event listeners after DOM loads
  document.addEventListener('DOMContentLoaded', () => {
    const searchForms = document.querySelectorAll('form[onsubmit]');
    searchForms.forEach(form => {
      form.removeAttribute('onsubmit');
      form.addEventListener('submit', handleSearch);
    });
  });

  // Update cart count
  function updateCounts() {
    const cartCount = document.getElementById('cart-count');
    
    // Get from localStorage
    const store = JSON.parse(localStorage.getItem('figure-store') || '{"cart": {}, "wishlist": []}');
    
    const cartItems = Object.values(store.cart as Record<string, number>).reduce((sum: number, quantity: number) => sum + quantity, 0);
    
    if (cartCount) {
      if (cartItems > 0) {
        cartCount.textContent = cartItems.toString();
        cartCount.classList.remove('opacity-0');
        cartCount.classList.remove('pointer-events-none');
        // Add animation
        cartCount.classList.add('animate-pulse');
        setTimeout(() => cartCount.classList.remove('animate-pulse'), 1000);
      } else {
        cartCount.classList.add('opacity-0');
        cartCount.classList.add('pointer-events-none');
      }
    }
  }

  // Update counts on page load
  updateCounts();
  
  // Listen for storage changes
  window.addEventListener('storage', updateCounts);
  
  // Update counts when cart changes
  window.addEventListener('cartUpdated', updateCounts);

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    // Close mobile menu with Escape
    if (e.key === 'Escape' && mobileMenu && !mobileMenu.classList.contains('hidden')) {
      mobileMenu.classList.add('hidden');
      mobileMenuBtn?.classList.remove('rotate-90');
    }
    
    // Focus search with Ctrl/Cmd + K
    if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
      e.preventDefault();
      const searchInput = document.getElementById('header-search') || document.getElementById('mobile-search');
      searchInput?.focus();
    }
  });

  // Make functions globally available
  window.handleSearch = handleSearch;
</script>
