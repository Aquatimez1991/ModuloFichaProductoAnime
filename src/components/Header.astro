---
// Header.astro
---

<header class="bg-white shadow-sm border-b sticky top-0 z-50">
  <!-- Top bar -->
  <div class="bg-primary text-primary-foreground py-2">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex items-center justify-between text-sm">
        <div class="flex items-center gap-6">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span>+51 949 799 869</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>ventas@figurestore.com</span>
          </div>
        </div>
        <div class="flex items-center gap-4">
          <span>Envío gratis en pedidos superiores a ¥50,000</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Main header -->
  <div class="max-w-7xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity cursor-pointer">
        <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-xl font-bold text-foreground">FigureStore</h1>
          <p class="text-xs text-muted-foreground">Anime Figures</p>
        </div>
      </a>

      <!-- Search bar -->
      <div class="hidden md:flex flex-1 max-w-md mx-8">
        <form class="w-full">
          <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-muted-foreground w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <input type="text" placeholder="Buscar figuras anime..." class="w-full pl-10 pr-4 py-2 border border-input rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
          </div>
        </form>
      </div>

      <!-- Navigation -->
      <nav class="hidden lg:flex items-center gap-8">
        <a href="/" class="text-foreground hover:text-primary transition-colors">Inicio</a>
        <a href="/figuras" class="text-foreground hover:text-primary transition-colors">Todas las Figuras</a>
        <a href="#" class="text-foreground hover:text-primary transition-colors">Categorías</a>
        <a href="#" class="text-foreground hover:text-primary transition-colors">Ofertas</a>
      </nav>

      <!-- Action buttons -->
      <div class="flex items-center gap-4">
        <button id="cart-btn" class="relative p-2 hover:bg-muted rounded-lg transition-colors" onclick="openCart()">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"></path>
          </svg>
          <span id="cart-count" class="absolute -top-1 -right-1 h-5 w-5 bg-primary text-primary-foreground rounded-full text-xs flex items-center justify-center hidden">0</span>
        </button>
        
        <button class="p-2 hover:bg-muted rounded-lg transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </button>

        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2 hover:bg-muted rounded-lg transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="lg:hidden border-t bg-background hidden">
    <div class="px-4 py-4">
      <!-- Mobile search -->
      <form class="mb-4">
        <div class="relative">
          <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-muted-foreground w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          <input type="text" placeholder="Buscar figuras anime..." class="w-full pl-10 pr-4 py-2 border border-input rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
        </div>
      </form>

      <!-- Mobile navigation -->
      <nav class="space-y-2">
        <a href="/" class="block py-2 text-foreground hover:text-primary transition-colors">Inicio</a>
        <a href="/figuras" class="block py-2 text-foreground hover:text-primary transition-colors">Todas las Figuras</a>
        <a href="#" class="block py-2 text-foreground hover:text-primary transition-colors">Categorías</a>
        <a href="#" class="block py-2 text-foreground hover:text-primary transition-colors">Ofertas</a>
      </nav>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Update cart count
  function updateCounts() {
    const cartCount = document.getElementById('cart-count');
    
    // Get from localStorage
    const store = JSON.parse(localStorage.getItem('figure-store') || '{"cart": {}, "wishlist": []}');
    
    const cartItems = Object.values(store.cart).reduce((sum: number, quantity: number) => sum + quantity, 0);
    
    if (cartCount) {
      if (cartItems > 0) {
        cartCount.textContent = cartItems.toString();
        cartCount.classList.remove('hidden');
      } else {
        cartCount.classList.add('hidden');
      }
    }
  }

  // Update counts on page load
  updateCounts();
  
  // Listen for storage changes
  window.addEventListener('storage', updateCounts);
  
  // Update counts when cart changes
  window.addEventListener('cartUpdated', updateCounts);
</script>
