---
export interface Props {
  size?: 'sm' | 'md' | 'lg';
  text?: string;
}

const { size = 'md', text = 'Cargando...' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-8 h-8',
  lg: 'w-12 h-12'
};
---

<div class="flex flex-col items-center justify-center p-8">
  <div class={`${sizeClasses[size]} animate-spin rounded-full border-2 border-muted border-t-primary`}></div>
  {text && <p class="mt-4 text-muted-foreground text-sm">{text}</p>}
</div>

